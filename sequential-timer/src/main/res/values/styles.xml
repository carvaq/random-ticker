<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:minWidth">24dp</item>
	</style>

	<style name="AppTheme.InputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>


	<style name="AppTheme.NumberEditText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:digits">0123456789</item>
		<item name="android:maxLength">3</item>
		<item name="android:inputType">number</item>
	</style>

	<style name="AppTheme.NumberEditText.Big"
		   parent="Base.Widget.MaterialComponents.TextInputEditText">
		<item name="android:textSize">30sp</item>
	</style>

	<style name="AppTheme.NumberEditText.Inline">
		<item name="android:layout_marginStart">8dp</item>
		<item name="android:layout_marginEnd">8dp</item>
		<item name="android:hint">3</item>
		<item name="android:minWidth">30dp</item>
		<item name="android:textSize">14sp</item>
	</style>
</resources>