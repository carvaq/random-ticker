<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.cvv.fanstaticapps.randomticker">

	<uses-permission android:name="android.permission.WAKE_LOCK"/>
	<uses-permission android:name="android.permission.VIBRATE"/>

	<application
			android:name=".TickerApplication"
			android:allowBackup="true"
			android:icon="@mipmap/ic_launcher"
			android:label="@string/app_name"
			android:roundIcon="@mipmap/ic_launcher_round"
			android:supportsRtl="true"
			android:theme="@style/AppTheme">
		<activity android:name=".activities.MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
			<intent-filter android:autoVerify="true">
				<action android:name="android.intent.action.VIEW"/>

				<category android:name="android.intent.category.DEFAULT"/>
				<category android:name="android.intent.category.BROWSABLE"/>

				<data
						android:scheme="https"
						android:host="randomticker-84c18.firebaseapp.com"/>
			</intent-filter>

			<meta-data
					android:name="default-url"
					android:value="https://randomticker-84c18.firebaseapp.com/index"/>
		</activity>
		<activity
				android:name=".activities.KlaxonActivity"
				android:showOnLockScreen="true"
				android:turnScreenOn="true"
				android:launchMode="singleTask"/>

		<receiver android:name=".receiver.OnAlarmReceiver"/>

		<activity android:name=".activities.CancelActivity"/>
		<activity
				android:name=".activities.SettingsActivity"
				android:label="@string/title_activity_settings"
				android:parentActivityName=".activities.MainActivity">
			<meta-data
					android:name="android.support.PARENT_ACTIVITY"
					android:value="com.cvv.fanstaticapps.randomticker.activities.MainActivity"/>
		</activity>


		<!-- Google Activities, need to be here because of styling -->
		<activity
				android:theme="@style/AppTheme.LicenseActivity"
				android:name="com.google.android.gms.oss.licenses.OssLicensesActivity"
				android:parentActivityName="com.google.android.gms.oss.licenses.OssLicensesMenuActivity">
			<meta-data
					android:name="android.support.PARENT_ACTIVITY"
					android:value="com.google.android.gms.oss.licenses.OssLicensesMenuActivity"/>
		</activity>
		<activity
				android:theme="@style/AppTheme.LicenseActivity"
				android:name="com.google.android.gms.oss.licenses.OssLicensesMenuActivity"
				android:parentActivityName=".activities.SettingsActivity">
			<meta-data
					android:name="android.support.PARENT_ACTIVITY"
					android:value="com.cvv.fanstaticapps.randomticker.activities.SettingsActivity"/>
		</activity>
	</application>

</manifest>