<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.NoActionBar"/>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored"/>

    <style name="AppTheme.Interval">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.Interval.SeekBar">
        <item name="android:layout_marginTop">@dimen/widgetMargin</item>
    </style>

    <style name="AppTheme.Interval.Unit">
        <item name="android:textStyle">italic</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="AppTheme.Interval.TimeDisplay">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Display2</item>
    </style>

    <style name="AppTheme.Interval.Container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/titleMargin</item>
        <item name="android:layout_marginBottom">@dimen/sectionMargin</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>
