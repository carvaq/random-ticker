<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/sectionMargin</item>
    </style>

    <style name="AppTheme.Interval">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.Interval.SeekBar">
        <item name="android:minWidth">@dimen/minSeekbarWidth</item>
        <item name="android:maxHeight">@dimen/progressbarMaxHeight</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:layout_marginTop">@dimen/widgetMargin</item>
    </style>

    <style name="AppTheme.Interval.Unit">
        <item name="android:paddingStart">@dimen/activityPadding</item>
        <item name="android:paddingEnd">@dimen/activityPadding</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="AppTheme.Interval.TimeDisplay">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Display2</item>
    </style>


    <style name="AppTheme.Interval.Description">
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:layout_marginBottom">@dimen/titleMargin</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
