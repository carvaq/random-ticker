<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Interval"/>

    <style name="Interval.NumberPicker">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:minWidth">@dimen/numberPickerMinSize</item>
        <item name="android:minHeight">@dimen/numberPickerMinSize</item>
        <item name="android:gravity">center</item>
        <item name="snp_minValue">0</item>
        <item name="snp_maxValue">59</item>
        <item name="snp_stepSize">1</item>
        <item name="snp_orientation">vertical</item>
        <item name="snp_buttonBackgroundTintSelector">@color/colorAccent</item>
        <item name="snp_value_text_appearance">?android:attr/textAppearanceLarge</item>
        <item name="snp_buttonPaddingBottom">8dp</item>
        <item name="snp_buttonPaddingLeft">8dp</item>
        <item name="snp_buttonPaddingRight">8dp</item>
        <item name="snp_buttonPaddingTop">8dp</item>
    </style>

    <style name="Interval.Unit">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
    </style>

    <style name="Interval.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/titleMargin</item>
        <item name="android:layout_marginBottom">@dimen/sectionMargin</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
