<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Interval"/>

    <style name="Interval.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:minWidth">@dimen/editTextMinSize</item>
        <item name="android:minHeight">@dimen/editTextMinSize</item>
        <item name="android:gravity">center</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:text">0</item>
        <item name="android:maxLength">2</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:digits">0123456789</item>
        <item name="android:inputType">number</item>
        <item name="min">0</item>
        <item name="max">59</item>
        <item name="unit">1</item>
        <item name="custom_layout">@layout/numer_picker</item>
    </style>

    <style name="Interval.Unit">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
    </style>

    <style name="Interval.Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/titleMargin</item>
        <item name="android:layout_marginBottom">@dimen/sectionMargin</item>
    </style>

</resources>
