<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activityPadding"
    tools:context="com.cvv.fanstaticapps.randomticker.activities.AlarmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sectionMargin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/remaining_time_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sectionMargin"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="@string/remaining_time"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

            <TextView
                android:id="@+id/remaining_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sectionMargin"
                android:layout_marginTop="@dimen/titleMargin"
                android:gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Display3"
                tools:text="133s"/>
        </LinearLayout>

        <com.richpath.RichPathView
            android:id="@+id/alarm_bell_icon"
            android:layout_width="0dp"
            android:layout_height="@dimen/alarm_bell_size"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            app:vector="@drawable/ic_alarm_bell"/>

    </LinearLayout>

    <include layout="@layout/pulsator_button"/>
</RelativeLayout>
