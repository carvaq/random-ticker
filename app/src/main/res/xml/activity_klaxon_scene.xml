<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto">

	<ConstraintSet android:id="@+id/start">
		<Constraint android:id="@+id/laWaiting" />
		<Constraint android:id="@+id/tvElapsedTime" />
		<Constraint android:id="@+id/btnRepeat" />
	</ConstraintSet>

	<ConstraintSet android:id="@+id/end">
		<Constraint
				android:id="@id/laWaiting"
				android:visibility="gone" />
		<Constraint
				android:id="@id/tvElapsedTime"
				android:scaleX="4"
				android:scaleY="4"
				app:layout_constraintBottom_toTopOf="@id/btnRepeat"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />
		<Constraint
				android:id="@id/btnRepeat"
				android:layout_height="48dp"
				android:visibility="visible"
				app:layout_constraintBottom_toTopOf="@id/plDismiss"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent" />

	</ConstraintSet>

	<Transition
			app:constraintSetEnd="@id/end"
			app:constraintSetStart="@+id/start">
		<OnClick
				app:clickAction="jumpToStart"
				app:targetId="@id/btnRepeat" />
	</Transition>

</MotionScene>
